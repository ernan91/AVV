        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
      
    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{form_row(registrationForm.Username, {label : 'Votre username'})}}
        {{form_row(registrationForm.email, {label : 'Email'})}}
        {{form_row(registrationForm.NomCompte, {label : 'Nom du compte'})}}
        {{ form_row(registrationForm.DateNaissCompte, {label : 'Votre date de naissance'}) }}
        {{ form_row(registrationForm.NumTelCompte, {label : 'Num√©ro de portable'}) }}
        {{ form_row(registrationForm.roles,) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password' }) }}
