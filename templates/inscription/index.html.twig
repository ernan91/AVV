{% extends 'base.html.twig' %}

{% block title %}Inscription index{% endblock %}

{% block body %}
    <h1>Inscription index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateInscrip</th>
                <th>DateAnnule</th>
                <th>Username</th>
                <th>Activite</th>
            </tr>
        </thead>
        <tbody>
        {% for inscription in inscriptions %}
            <tr>
                <td>{{ inscription.id }}</td>
                <td>{{ inscription.dateInscrip ? inscription.dateInscrip|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ inscription.dateAnnule ? inscription.dateAnnule|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ inscription.user ? inscription.user }}</td>
                <td>{{ inscription.activite ? inscription.activite }}</td>
                <td>
                    <a href="{{ path('inscription_show', {'id': inscription.id}) }}">show</a>
                    <a href="{{ path('inscription_edit', {'id': inscription.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('inscription_new') }}">Create new</a>
{% endblock %}
